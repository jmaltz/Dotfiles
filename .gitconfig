[user]
	name = Jonathan Maltz
	email = maltz@yelp.com 
[color]
    status = auto
    branch = auto
    ui = true
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[color "branch"]
  current = yellow reverse 
  local = yellow
  remote = green 
[color "diff"] 
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse 
[color "status"]
  added = yellow
  changed = green 
  untracked = cyan
[alias]
	a = add
	b = branch
	d = diff
	f = fetch
	m = merge
	r = remote -v
	s = status
	au = add -u
	cm = commit -m
	co = checkout
	cp = cherry-pick
	dh = diff HEAD
	lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lf = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --numstat
	st = stash
	sp = stash pop
	ri = rebase -i
	rc = rebase --continue
	brd = branch -d
	brm = branch -m
	cob = checkout -b
	cam = commit -am
	dh1 = diff HEAD~1
	smi = submodule init
	smu = submodule update
	brdd = branch -D
	cmam = commit --amend -m
	pull = pull --no-ff
	pulm = pull origin master
	pusm = push origin master
	blow-away = reset --hard HEAD
[core]
	editor = /usr/bin/vim
