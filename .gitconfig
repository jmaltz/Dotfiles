	name = Jonathan Maltz
	email = jm1271@gmail.com
[color]
    status = auto
    branch = auto
    ui = true
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[color "branch"]
  current = yellow reverse 
  local = yellow
  remote = green 
[color "diff"] 
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse 
[color "status"]
  added = yellow
  changed = green 
  untracked = cyan
[alias]
	b = branch
	s = status
	r = remote -v
	cm = commit -m
    co = checkout
	brd = branch -d
	cob = checkout -b
    cam = commit -am
	smi = submodule init
	smu = submodule update
	blow-away = reset --hard HEAD
[core]
	editor = /usr/bin/vim
